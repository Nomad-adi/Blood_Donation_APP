<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:elevation="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userlayout"
            android:orientation="horizontal"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userprofile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/userType"
                    android:text="Donor"
                    android:layout_margin="2dp"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/userName"
                    android:text="Aditya Urkude"
                    android:layout_margin="2dp"
                    android:textColor="@color/maincolor"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/user_blood_group"
                    android:text="A+"
                    android:layout_margin="2dp"
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="adtiyasoni66593@gmail.com"
                    android:id="@+id/userEmail"
                    android:layout_margin="2dp"
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/userPh"
                    android:text="8839649499"
                    android:layout_margin="2dp"
                    android:textAlignment="textStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/emailNowBtn"
            android:layout_gravity="center"
            android:background="@drawable/btn_background"
            android:text="@string/email_now"
            android:padding="2dp"
            android:layout_marginTop="65dp"
            android:visibility="invisible"
            android:textAllCaps="false"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>